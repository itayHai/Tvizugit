{
  "name": "server",
  "version": "1.0.0",
  "description": "tvizugit's server",
  "main": "app.js",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^15.0.0",
    "mongodb": "^3.5.5",
    "mongoose": "^5.9.7",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "graphql-compose": "^7.14.1",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "transpile": "babel ./src --out-dir .dist-server --source-maps",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm-run-all clean transpile",
    "start": "npm run build && node .dist-server/app.js",
    "clean": "rimraf dist-server",
    "dev": "npm run watch:dev",
    "watch:dev": "nodemon"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itayHai/Tvizugit.git"
  },
  "author": "Itay Haizler, Tali Cohen, Ido Perlman, Ella Portnov, Rotem Hugi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/itayHai/Tvizugit/issues"
  },
  "homepage": "https://github.com/itayHai/Tvizugit#readme"
}
